# ====================================
# Football Minutes - Environment Configuration
# Copy this file to .env and customize for your environment
# ====================================

# ----- Server Configuration -----
# Port for the Express API server (local dev only)
API_PORT=3001

# CORS origin for API requests (local dev only)
CORS_ORIGIN=http://localhost:3000

# Node environment (development | production | test)
NODE_ENV=development

# ----- Database -----
# PostgreSQL connection string
# Format: postgres://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgres://USER:PASSWORD@HOST:PORT/DATABASE

# Optional database settings
# DB_POOL_MAX=10
# DB_SSL_REJECT_UNAUTHORIZED=false

# ----- Security -----
# Secret for signing session tokens (REQUIRED - change in production!)
FFM_SESSION_SECRET=change-me-to-random-32+char-string

# ----- Frontend (Vite) -----
# Enable API mode (set to true to use backend API instead of localStorage)
VITE_USE_API=true

# API base URL (use /api for Vite proxy, or full URL for separate backend)
VITE_API_BASE_URL=/api

# Team UUID (required when VITE_USE_API=true)
VITE_TEAM_ID=00000000-0000-0000-0000-000000000000

# Default actor roles (comma-separated)
VITE_ACTOR_ROLES=coach,analyst

# Session secret for frontend (should match FFM_SESSION_SECRET)
VITE_SESSION_SECRET=change-me-to-random-32+char-string
