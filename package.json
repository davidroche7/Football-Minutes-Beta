{
  "name": "football-minutes",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "Comprehensive team management tool for tracking football season lineups, stats, and fair playing time distribution",
  "scripts": {
    "dev": "concurrently -n \"frontend,backend\" -c \"cyan,magenta\" \"npm:dev:frontend\" \"npm:dev:backend\"",
    "dev:frontend": "vite",
    "dev:backend": "tsx watch --env-file=.env server/dev-server.ts",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "tsc -b && vite build",
    "build:backend": "esbuild server/production-server.ts --bundle --platform=node --target=node20 --format=esm --outfile=dist/server.js --external:pg --external:@vercel/postgres --external:express --external:cors --external:dotenv",
    "start": "NODE_ENV=production node dist/server.js",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "import:legacy": "node scripts/import-legacy.cjs",
    "db:migrate": "node scripts/db/migrate.cjs",
    "typecheck": "tsc --noEmit && tsc --project tsconfig.api.json --noEmit"
  },
  "dependencies": {
    "@eslint/js": "^9.37.0",
    "@vercel/postgres": "^0.10.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "globals": "^16.4.0",
    "pg": "^8.13.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "xlsx": "^0.18.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^22.9.0",
    "@types/pg": "^8.6.7",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vercel/node": "^5.5.4",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "esbuild": "^0.25.11",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "jsdom": "^25.0.1",
    "postcss": "^8.4.49",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.16",
    "tsx": "^4.20.6",
    "typescript": "^5.6.3",
    "vite": "^6.0.3",
    "vitest": "^2.1.8"
  }
}
